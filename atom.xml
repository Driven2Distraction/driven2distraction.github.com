<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>Driven2Distraction</title>
 <link href="http://www.driven2distraction.co.za/atom.xml" rel="self"/>
 <link href="http://www.driven2distraction.co.za/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://www.driven2distraction.co.za/</id>
 <author>
   <name>Driven2Distraction</name>
   <email>distraction@drivensoftware.com</email>
 </author>
 
 {% for post in site.posts %}
   <entry>
     <title>{{ post.title }}</title>
     <link href="http://www.driven2distraction.co.za{{ post.url }}"/>
     <updated>{{ post.date | date_to_xmlschema }}</updated>
     <id>http://www.driven2distraction.co.za{{ post.id }}</id>
     <content type="html">{{ post.content | xml_escape }}</content>
   </entry>
 {% endfor %}
 
</feed>

